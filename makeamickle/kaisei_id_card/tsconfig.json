{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@kaisei-id-card/shared/*": ["packages/shared/src/*"],
      "@kaisei-id-card/firebase-config/*": ["packages/firebase-config/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "apps/student-app",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}